<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th>Quiz Name</th>
        <th>Category and Qty</th>
        <th>Users</th>
      </tr>
    </thead>
    <tbody>
       <tr>
        <%== form_tag "/admin/quiz-builder" do %>
        <td><%== text_field_tag :quiz_name, "", size: 40 %></td>
        <td>
          <% Category.all.each do |category| %>
          <%== select_tag "category#{category.id}", options_from_collection_for_select(Category.order(:name).all, :name, :name), prompt: "Choose a category..." %> <%== text_field_tag "qty#{category.id}", "", size: 5 %><br>
        <% end %>
        </td>
        <td>  
          <% User.order(:last_name).all.each do |user| %>
            <%== check_box_tag "user#{user.id}", "on" %> <%= user.first_name %> <%= user.last_name %><br>
          <% end %>
        </td>
        <% end %>
      </tr>
  </table>
</div>
