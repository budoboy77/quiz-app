<html>
  
  <head>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <% if @title == "Register" %>
      <title>Register New User</title>
    <% elsif @title == "Login" %>
      <title>Login</title>
    <% else %>
      <title>QuiZapp - <%= @title %></title>
    <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <script>
      document.domain = 'divshot.com';
    </script>
  </head>
  
  <body>
    <% if @title == "Register" %>
      <title>Register New User</title>
    <% elsif @title == "Login" %>
      <title>Login</title>
    <% else %>
      <title>QuiZapp - <%= @title %></title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="brand" href="#">QuiZapp - <%= @title %></a>
            <div class="navbar-content">
              <ul class="nav  pull-right">
                <% if session[:admin_id] %>
                  <li class="<%= 'active' if @title.include? "Quiz Builder" %>"><a href="/admin/quiz-builder/new">Quizzes</a></li>
                  <li class="<%= 'active' if @title.include? "Questions" %>"><a href="/admin/questions/new">Questions</a></li>
                  <li class="<%= 'active' if @title.include? "Categories" %>"><a href="/admin/categories/new">Categories</a></li>
                  <li class="<%= 'active' if @title.include? "User" %>"><a href="/admin/users/index">Users</a></li>
                <% else %>
                  <li class="<%= 'active' if @title.include? "My Quizzes" %>"><a href="/myquizzes">My Quizzes</a></li>
                <% end %>
                  <li>
                    <a href="/logout">Logout</a> 
                  </li>
                
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if flash[:error] %>
      <div class="well">
        <div class="alert-error">
          <%= flash[:error] %>
        </div>
      </div>
    <% end %>
    <% if flash[:success] %>
      <div class="well">
        <div class="alert-success">
          <%= flash[:success] %>
        </div>
      </div>
    <% end %>
<%== yield %>
  </body>

</html>
